{erl_opts, [debug_info]}.
{deps, [
    {cowboy, {git, "https://github.com/ninenines/cowboy.git"}},
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}}
]}.

{shell, [
    % {config, "config/sys.config"},
    {apps, [battleship]}
]}.

{project_plugins, [
    {eqwalizer_rebar3,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_rebar3"}},
    erlfmt,
    rebar3_auto
]}.

{auto, [{dirs, ["src"]}, {file_extensions, [".erl", ".hrl"]}]}.
