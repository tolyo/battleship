{erl_opts, [debug_info]}.
{deps, [
    {cowboy, {git, "https://github.com/ninenines/cowboy.git"}},
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}},
    {epgsql, "4.8.0"},
    {erlydtl, "0.14.0"},
    {epgsql_pool, {git, "https://github.com/wgnet/epgsql_pool.git", {branch, "master"}}},
    {dotenv_config, "2.3.3"}
]}.

{shell, [
    % {config, "config/sys.config"},
    {apps, [battleship]}
]}.

{profiles, [
    {eqwalizer, [
        {project_plugins, [
            {eqwalizer_rebar3,
                {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
                    "eqwalizer_rebar3"}}
        ]}
    ]}
]}.

{project_plugins, [erlfmt]}.
{erlfmt, [write]}.
